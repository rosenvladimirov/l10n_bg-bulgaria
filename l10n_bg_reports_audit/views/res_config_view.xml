<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.l10n_bg_reports</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="45"/>
        <field name="inherit_id" ref="l10n_bg_config.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//app[@name='l10n_bg_config']" position="inside">
                <block title="Settings" name="l10n_bg_audit_report">
                    <setting id="l10n_bg_audit_oca_setting" title="OCA settings" string="OCA settings" help="OCA modules for help.">
                        <div class="d-flex">
                            <field name="module_account_usability" class="ml16"/>
                            <label for="module_account_usability" class="o_light_label"/>
                        </div>
                        <div class="d-flex">
                            <field name="module_account_financial_report" class="ml16"/>
                            <label for="module_account_financial_report" class="o_light_label"/>
                        </div>
                    </setting>
                    <setting id="l10n_bg_audit_ee_setting" title="OCA settings" string="EE settings" help="EE modules for help.">
                        <div class="d-flex">
                            <field name="module_account_reports" class="ml16" widget="upgrade_boolean"/>
                            <label for="module_account_reports" class="o_light_label"/>
                        </div>
                    </setting>
                    <setting id="l10n_bg_audit_report_setting" title="Vat &amp; Intrastat" string="Vat &amp; Intrastat" help="Mandatory Declaration thresholds. Calculate VAT base on formula.">
                        <div class="content-group" name="l10n_bg_report_intra_stat">
                            <div class="d-flex">
                                <label for="l10n_bg_intra_stat_type" class="o_light_label ml16"/>
                                <field name="l10n_bg_intra_stat_type" class="ml16"/>
                            </div>
                            <div class="d-flex">
                                <field name="l10n_bg_odoo_compatible" class="ml16" readonly="0"/>
                                <label for="l10n_bg_odoo_compatible" class="o_light_label"/>
                            </div>
                            <div class="d-flex">
                                <field name="l10n_bg_intra_stat_incomes" class="ml16" readonly="0"/>
                                <label for="l10n_bg_intra_stat_incomes" class="o_light_label"/>
                            </div>
                            <div class="d-flex">
                                <field name="l10n_bg_intra_stat_outcomes" class="ml16" readonly="0"/>
                                <label for="l10n_bg_intra_stat_outcomes" class="o_light_label"/>
                            </div>
                        </div>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
